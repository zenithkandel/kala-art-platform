<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - कला Admin</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Custom Styles -->
    <link rel="stylesheet" href="/css/admin-dashboard.css">
</head>
<body>
    <!-- Custom Cursor -->
    <div class="cursor"></div>
    
    <!-- Background Particles -->
    <canvas id="particles-canvas"></canvas>
    
    <!-- Sidebar -->
    <nav class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <i class="fas fa-palette"></i>
                <span class="logo-text">कला Admin</span>
            </div>
            <button class="sidebar-toggle d-lg-none" onclick="toggleSidebar()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        
        <div class="sidebar-content">
            <ul class="nav-menu">
                <li class="nav-item active">
                    <a href="/admin/dashboard" class="nav-link">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/arts" class="nav-link">
                        <i class="fas fa-images"></i>
                        <span>Uploaded Arts</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/sales" class="nav-link">
                        <i class="fas fa-chart-line"></i>
                        <span>Sold Products</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/orders" class="nav-link">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Buying Requests</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/artists" class="nav-link">
                        <i class="fas fa-users"></i>
                        <span>Active Artists</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/applications" class="nav-link">
                        <i class="fas fa-user-plus"></i>
                        <span>Artist Applications</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/upload" class="nav-link">
                        <i class="fas fa-cloud-upload-alt"></i>
                        <span>Upload New Art</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/messages" class="nav-link">
                        <i class="fas fa-envelope"></i>
                        <span>Contact Messages</span>
                    </a>
                </li>
            </ul>
        </div>
        
        <div class="sidebar-footer">
            <div class="admin-info">
                <div class="admin-avatar">
                    <i class="fas fa-user-shield"></i>
                </div>
                <div class="admin-details">
                    <span class="admin-name"><%= admin.username %></span>
                    <span class="admin-role">Administrator</span>
                </div>
            </div>
            <button class="btn-logout" onclick="logout()">
                <i class="fas fa-sign-out-alt"></i>
            </button>
        </div>
    </nav>
    
    <!-- Main Content -->
    <main class="main-content" id="main-content">
        <!-- Top Header -->
        <header class="top-header">
            <div class="header-left">
                <button class="sidebar-toggle d-lg-none" onclick="toggleSidebar()">
                    <i class="fas fa-bars"></i>
                </button>
                <h1 class="page-title">Dashboard</h1>
            </div>
            
            <div class="header-right">
                <!-- Theme Toggle -->
                <button class="btn-icon theme-toggle" onclick="toggleTheme()" title="Toggle Theme">
                    <i class="fas fa-moon" id="theme-icon"></i>
                </button>
                
                <!-- Refresh Stats -->
                <button class="btn-icon" onclick="refreshStats()" title="Refresh Stats">
                    <i class="fas fa-sync-alt" id="refresh-icon"></i>
                </button>
                
                <!-- Notifications -->
                <div class="notifications-dropdown">
                    <button class="btn-icon" onclick="toggleNotifications()">
                        <i class="fas fa-bell"></i>
                        <span class="notification-badge">3</span>
                    </button>
                    <div class="notifications-menu" id="notifications-menu">
                        <div class="notifications-header">
                            <h6>Notifications</h6>
                            <button class="btn-text" onclick="markAllRead()">Mark all read</button>
                        </div>
                        <div class="notifications-list">
                            <div class="notification-item unread">
                                <i class="fas fa-user-plus text-primary"></i>
                                <div class="notification-content">
                                    <p>New artist application received</p>
                                    <span class="notification-time">5 minutes ago</span>
                                </div>
                            </div>
                            <div class="notification-item">
                                <i class="fas fa-shopping-cart text-success"></i>
                                <div class="notification-content">
                                    <p>New order placed</p>
                                    <span class="notification-time">1 hour ago</span>
                                </div>
                            </div>
                            <div class="notification-item">
                                <i class="fas fa-envelope text-info"></i>
                                <div class="notification-content">
                                    <p>New contact message</p>
                                    <span class="notification-time">2 hours ago</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        
        <!-- Dashboard Content -->
        <div class="dashboard-content">
            <!-- Stats Cards -->
            <div class="stats-grid">
                <div class="stat-card" data-aos="fade-up" data-aos-delay="100">
                    <div class="stat-icon">
                        <i class="fas fa-eye"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number" data-count="<%= stats.totalViews %>">0</h3>
                        <p class="stat-label">Total Site Views</p>
                        <span class="stat-change positive">
                            <i class="fas fa-arrow-up"></i> +12%
                        </span>
                    </div>
                </div>
                
                <div class="stat-card" data-aos="fade-up" data-aos-delay="200">
                    <div class="stat-icon">
                        <i class="fas fa-images"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number" data-count="<%= stats.sellableArts %>">0</h3>
                        <p class="stat-label">Sellable Arts</p>
                        <span class="stat-change positive">
                            <i class="fas fa-arrow-up"></i> +5%
                        </span>
                    </div>
                </div>
                
                <div class="stat-card" data-aos="fade-up" data-aos-delay="300">
                    <div class="stat-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number" data-count="<%= stats.soldArts %>">0</h3>
                        <p class="stat-label">Sold Arts</p>
                        <span class="stat-change positive">
                            <i class="fas fa-arrow-up"></i> +8%
                        </span>
                    </div>
                </div>
                
                <div class="stat-card" data-aos="fade-up" data-aos-delay="400">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number" data-count="<%= stats.activeArtists %>">0</h3>
                        <p class="stat-label">Active Artists</p>
                        <span class="stat-change positive">
                            <i class="fas fa-arrow-up"></i> +3%
                        </span>
                    </div>
                </div>
                
                <div class="stat-card" data-aos="fade-up" data-aos-delay="500">
                    <div class="stat-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number" data-count="<%= stats.contactMessages %>">0</h3>
                        <p class="stat-label">Contact Messages</p>
                        <span class="stat-change neutral">
                            <i class="fas fa-minus"></i> 0%
                        </span>
                    </div>
                </div>
                
                <div class="stat-card" data-aos="fade-up" data-aos-delay="600">
                    <div class="stat-icon">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number" data-count="<%= stats.activeBuyingRequests %>">0</h3>
                        <p class="stat-label">Active Requests</p>
                        <span class="stat-change positive">
                            <i class="fas fa-arrow-up"></i> +15%
                        </span>
                    </div>
                </div>
                
                <div class="stat-card" data-aos="fade-up" data-aos-delay="700">
                    <div class="stat-icon">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number" data-count="<%= stats.artistApplications %>">0</h3>
                        <p class="stat-label">Artist Applications</p>
                        <span class="stat-change positive">
                            <i class="fas fa-arrow-up"></i> +7%
                        </span>
                    </div>
                </div>
            </div>
            
            <!-- Recent Activity Section -->
            <div class="row mt-4">
                <div class="col-lg-6">
                    <div class="activity-card" data-aos="fade-up" data-aos-delay="800">
                        <div class="card-header">
                            <h5><i class="fas fa-clock me-2"></i>Recent Orders</h5>
                            <a href="/admin/orders" class="btn-text">View all</a>
                        </div>
                        <div class="card-content">
                            <% if (stats.recentOrders && stats.recentOrders.length > 0) { %>
                                <% stats.recentOrders.forEach(order => { %>
                                    <div class="activity-item">
                                        <div class="activity-icon">
                                            <i class="fas fa-shopping-cart"></i>
                                        </div>
                                        <div class="activity-content">
                                            <p class="activity-title">Order #<%= order.order_code %></p>
                                            <p class="activity-subtitle">
                                                by <%= order.buyer_name %> • Rs. <%= order.total_amount %>
                                            </p>
                                            <span class="activity-time">
                                                <%= new Date(order.created_at).toLocaleDateString() %>
                                            </span>
                                        </div>
                                        <span class="status-badge status-<%= order.status %>">
                                            <%= order.status %>
                                        </span>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <div class="no-data">
                                    <i class="fas fa-shopping-cart"></i>
                                    <p>No recent orders</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-6">
                    <div class="activity-card" data-aos="fade-up" data-aos-delay="900">
                        <div class="card-header">
                            <h5><i class="fas fa-user-plus me-2"></i>Recent Applications</h5>
                            <a href="/admin/applications" class="btn-text">View all</a>
                        </div>
                        <div class="card-content">
                            <% if (stats.recentApplications && stats.recentApplications.length > 0) { %>
                                <% stats.recentApplications.forEach(app => { %>
                                    <div class="activity-item">
                                        <div class="activity-icon">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <div class="activity-content">
                                            <p class="activity-title"><%= app.full_name %></p>
                                            <p class="activity-subtitle">
                                                <%= app.specialty %> • <%= app.contact_email %>
                                            </p>
                                            <span class="activity-time">
                                                <%= new Date(app.submitted_at).toLocaleDateString() %>
                                            </span>
                                        </div>
                                        <span class="status-badge status-<%= app.status %>">
                                            <%= app.status %>
                                        </span>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <div class="no-data">
                                    <i class="fas fa-user-plus"></i>
                                    <p>No recent applications</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    
    <!-- Toast Notification Container -->
    <div class="toast-container" id="toast-container"></div>
    
    <!-- Overlay for mobile sidebar -->
    <div class="sidebar-overlay" id="sidebar-overlay" onclick="toggleSidebar()"></div>
    
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="/public/js/admin-dashboard.js"></script>
</body>
</html>
