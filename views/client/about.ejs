<!-- Contact Section -->
<section class="contact">
  <div class="contact__container">
    <div class="contact__header">
      <i class="fa-duotone fa-messages contact__icon"></i>
      <h2>Get In Touch</h2>
      <p>Have questions, suggestions, or want to collaborate? We'd love to hear from you.</p>
      
      <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert--success">
          <i class="fas fa-check-circle"></i>
          <%= success %>
        </div>
      <% } %>
      
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert--error">
          <i class="fas fa-exclamation-circle"></i>
          <%= error %>
        </div>
      <% } %>
    </div>
    <form class="form" method="post" action="/about">
      <div class="form__grid">
        <div class="field">
          <label><i class="fa-light fa-user"></i> Name</label>
          <input type="text" name="full_name" required>
        </div>
        <div class="field">
          <label><i class="fa-light fa-envelope"></i> Email</label>
          <input type="email" name="email" required>
        </div>
        <div class="field">
          <label><i class="fa-light fa-phone"></i> Phone</label>
          <input type="tel" name="phone">
        </div>
        <div class="field">
          <label><i class="fa-light fa-tag"></i> Subject</label>
          <input type="text" name="subject">
        </div>
        <div class="field field--full">
          <label><i class="fa-light fa-message"></i> Message</label>
          <textarea name="message" rows="4" required></textarea>
        </div>
      </div>
      <button class="btn btn--primary" type="submit">
        <i class="fa-light fa-paper-plane"></i> Send Message
      </button>
    </form>
  </div>
</section>
