<section class="hero">
  <div class="hero__content">
    <h1>Discover Young Artistry</h1>
    <p>A sleek platform to explore and own artworks by talented young artists.</p>
  </div>
</section>

<section class="stats" aria-label="Site statistics">
  <div class="stats__grid">
    <div class="stat"><span class="stat__num" id="statVisitors">—</span><span class="stat__label">Visitors</span></div>
    <div class="stat"><span class="stat__num" id="statArts">—</span><span class="stat__label">Arts</span></div>
    <div class="stat"><span class="stat__num" id="statSold">—</span><span class="stat__label">Sold</span></div>
    <div class="stat"><span class="stat__num" id="statArtists">—</span><span class="stat__label">Artists</span></div>
  </div>
</section>

<section class="search">
  <form class="search__form" role="search">
    <input type="search" name="q" placeholder="Search artworks, artists, styles…" aria-label="Search" />
    <button class="btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i><span>Search</span></button>
  </form>
</section>

<section class="grid" aria-label="Artworks">
  <div id="artGrid" class="grid__cards"></div>
  <button id="loadMore" class="btn btn--ghost">Load more</button>
  <div id="observerSentinel" aria-hidden="true"></div>
</section>
