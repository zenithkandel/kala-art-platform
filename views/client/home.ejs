<section class="hero">
  <div class="hero__content">
    <h1><i class="fas fa-sparkles"></i> Discover Young Artistry</h1>
    <p>A sleek platform to explore and own artworks by talented young artists.</p>
    <div class="hero__cta">
      <a href="#grid" class="btn btn--primary">
        <i class="fas fa-compass"></i> Explore Art
      </a>
    </div>
  </div>
</section>

<section class="stats" aria-label="Site statistics">
  <div class="stats__grid">
    <div class="stat">
      <i class="fas fa-eye stat__icon"></i>
      <span class="stat__num" id="statVisitors"><%= stats.daily_views || 0 %></span>
      <span class="stat__label">Today's Views</span>
    </div>
    <div class="stat">
      <i class="fas fa-paint-brush stat__icon"></i>
      <span class="stat__num" id="statArts"><%= stats.total_arts || 0 %></span>
      <span class="stat__label">Arts</span>
    </div>
    <div class="stat">
      <i class="fas fa-check-circle stat__icon"></i>
      <span class="stat__num" id="statSold"><%= stats.total_sold || 0 %></span>
      <span class="stat__label">Sold</span>
    </div>
    <div class="stat">
      <i class="fas fa-users stat__icon"></i>
      <span class="stat__num" id="statArtists"><%= stats.total_artists || 0 %></span>
      <span class="stat__label">Artists</span>
    </div>
  </div>
</section>

<section class="search" aria-label="Search artworks">
  <form class="search__form" role="search">
    <div class="search__input-wrapper">
      <label for="search-input" class="sr-only">Search artworks</label>
      <i class="fas fa-magnifying-glass search__icon" aria-hidden="true"></i>
      <input 
        type="search" 
        id="search-input"
        name="q" 
        placeholder="Search artworks, artists, stylesâ€¦" 
        aria-label="Search artworks, artists, and styles"
        autocomplete="off"
        spellcheck="false"
      />
    </div>
    <button class="btn" type="submit" aria-label="Submit search">
      <i class="fa-sharp fa-solid fa-arrow-right" aria-hidden="true"></i>
      <span>Search</span>
    </button>
  </form>
</section>

<section class="grid" id="grid" aria-label="Artworks">
  <div class="grid__header">
    <h2><i class="fas fa-grid-2"></i> Latest Artworks</h2>
    <div class="grid__filters">
      <button class="btn btn--ghost active" data-filter="all">
        <i class="fas fa-layer-group"></i> All Types
      </button>
      <button class="btn btn--ghost" data-filter="sketch">
        <i class="fas fa-pencil"></i> Sketches
      </button>
      <button class="btn btn--ghost" data-filter="painting">
        <i class="fas fa-palette"></i> Paintings
      </button>
      <button class="btn btn--ghost" data-filter="portrait">
        <i class="fas fa-user-tie"></i> Portraits
      </button>
      <button class="btn btn--ghost" data-filter="digital">
        <i class="fas fa-tablet-screen-button"></i> Digital
      </button>
      <button class="btn btn--ghost" data-sort="price-low">
        <i class="fas fa-arrow-up-short-wide"></i> Price: Low to High
      </button>
      <button class="btn btn--ghost" data-sort="price-high">
        <i class="fas fa-arrow-down-wide-short"></i> Price: High to Low
      </button>
    </div>
  </div>
  <div id="artGrid" class="grid__cards"></div>
  <button id="loadMore" class="btn btn--ghost">
    <i class="fas fa-plus"></i> Load more
  </button>
  <div id="observerSentinel" aria-hidden="true"></div>
</section>

<!-- Artists Section -->
<section class="artists-section" id="artists" aria-label="Featured Artists">
  <div class="artists-section__header">
    <h2><i class="fas fa-users"></i> Featured Artists</h2>
    <div class="artists-section__filters">
      <button class="btn btn--ghost active" data-artist-sort="name">
        <i class="fas fa-user"></i> By Name
      </button>
      <button class="btn btn--ghost" data-artist-sort="artworks">
        <i class="fas fa-palette"></i> Most Artworks
      </button>
      <button class="btn btn--ghost" data-artist-sort="sales">
        <i class="fas fa-trophy"></i> Most Sales
      </button>
    </div>
  </div>
  <div id="artistGrid" class="artists-grid"></div>
  <div class="artists-section__footer">
    <a href="/artists" class="btn btn--primary">
      <i class="fas fa-users"></i> View All Artists
    </a>
  </div>
</section>

<!-- Newsletter Section -->
<section class="newsletter" aria-label="Newsletter signup">
  <div class="newsletter__content">
    <div class="newsletter__text">
      <h2><i class="fas fa-envelope-open-text"></i> Stay Connected</h2>
      <p>Get notified about new artworks, artist spotlights, and exclusive exhibitions.</p>
    </div>
    <form class="newsletter__form">
      <div class="newsletter__input-group">
        <input type="email" placeholder="Enter your email" class="newsletter__input" required>
        <button type="submit" class="btn btn--primary newsletter__btn">
          <i class="fas fa-paper-plane"></i> Subscribe
        </button>
      </div>
    </form>
  </div>
</section>

<!-- Featured Stats Section -->
<section class="featured-stats" aria-label="Platform achievements">
  <div class="featured-stats__grid">
    <div class="featured-stat">
      <div class="featured-stat__icon">
        <i class="fas fa-trophy"></i>
      </div>
      <h3>Award Winning</h3>
      <p>Showcasing the finest young talent in contemporary art</p>
    </div>
    <div class="featured-stat">
      <div class="featured-stat__icon">
        <i class="fas fa-rocket"></i>
      </div>
      <h3>Growing Community</h3>
      <p>Join thousands of art enthusiasts and emerging artists</p>
    </div>
    <div class="featured-stat">
      <div class="featured-stat__icon">
        <i class="fas fa-heart"></i>
      </div>
      <h3>Passion Driven</h3>
      <p>Supporting artists' dreams and connecting them with collectors</p>
    </div>
  </div>
</section>

<!-- CTA Section -->
<section class="cta-section" aria-label="Call to action">
  <div class="cta-content">
    <h2><i class="fas fa-stars"></i> Ready to Start Your Art Journey?</h2>
    <p>Discover unique pieces, support young artists, and build your collection today.</p>
    <div class="cta-buttons">
      <a href="#grid" class="btn btn--primary">
        <i class="fas fa-compass"></i> Browse Gallery
      </a>
      <a href="/register" class="btn btn--ghost">
        <i class="fas fa-user-plus"></i> Become an Artist
      </a>
    </div>
  </div>
</section>
