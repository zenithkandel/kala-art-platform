<section class="hero">
  <div class="hero__content">
    <h1><i class="fa-duotone fa-sparkles"></i> Discover Young Artistry</h1>
    <p>A sleek platform to explore and own artworks by talented young artists.</p>
    <div class="hero__cta">
      <a href="#grid" class="btn btn--primary">
        <i class="fa-light fa-compass"></i> Explore Art
      </a>
    </div>
  </div>
</section>

<section class="stats" aria-label="Site statistics">
  <div class="stats__grid">
    <div class="stat">
      <i class="fa-duotone fa-eye stat__icon"></i>
      <span class="stat__num" id="statVisitors">—</span>
      <span class="stat__label">Visitors</span>
    </div>
    <div class="stat">
      <i class="fa-duotone fa-paintbrush-fine stat__icon"></i>
      <span class="stat__num" id="statArts">—</span>
      <span class="stat__label">Arts</span>
    </div>
    <div class="stat">
      <i class="fa-duotone fa-badge-check stat__icon"></i>
      <span class="stat__num" id="statSold">—</span>
      <span class="stat__label">Sold</span>
    </div>
    <div class="stat">
      <i class="fa-duotone fa-users-rays stat__icon"></i>
      <span class="stat__num" id="statArtists">—</span>
      <span class="stat__label">Artists</span>
    </div>
  </div>
</section>

<section class="search" aria-label="Search artworks">
  <form class="search__form" role="search">
    <div class="search__input-wrapper">
      <label for="search-input" class="sr-only">Search artworks</label>
      <i class="fa-light fa-magnifying-glass search__icon" aria-hidden="true"></i>
      <input 
        type="search" 
        id="search-input"
        name="q" 
        placeholder="Search artworks, artists, styles…" 
        aria-label="Search artworks, artists, and styles"
        autocomplete="off"
        spellcheck="false"
      />
    </div>
    <button class="btn" type="submit" aria-label="Submit search">
      <i class="fa-sharp fa-solid fa-arrow-right" aria-hidden="true"></i>
      <span>Search</span>
    </button>
  </form>
</section>

<section class="grid" id="grid" aria-label="Artworks">
  <div class="grid__header">
    <h2><i class="fa-light fa-grid-2"></i> Latest Artworks</h2>
    <div class="grid__filters">
      <button class="btn btn--ghost active" data-filter="all">
        <i class="fa-light fa-layer-group"></i> All Types
      </button>
      <button class="btn btn--ghost" data-filter="sketch">
        <i class="fa-light fa-pencil"></i> Sketches
      </button>
      <button class="btn btn--ghost" data-filter="painting">
        <i class="fa-light fa-palette"></i> Paintings
      </button>
      <button class="btn btn--ghost" data-filter="portrait">
        <i class="fa-light fa-user-tie"></i> Portraits
      </button>
      <button class="btn btn--ghost" data-filter="digital">
        <i class="fa-light fa-tablet-screen-button"></i> Digital
      </button>
      <button class="btn btn--ghost" data-sort="price-low">
        <i class="fa-light fa-arrow-up-short-wide"></i> Price: Low to High
      </button>
      <button class="btn btn--ghost" data-sort="price-high">
        <i class="fa-light fa-arrow-down-wide-short"></i> Price: High to Low
      </button>
    </div>
  </div>
  <div id="artGrid" class="grid__cards"></div>
  <button id="loadMore" class="btn btn--ghost">
    <i class="fa-light fa-plus"></i> Load more
  </button>
  <div id="observerSentinel" aria-hidden="true"></div>
</section>
